@page
@model Bookmania.Pages.Livros.ExcluirModel
@{
	ViewData["Title"] = "Excluir Livro";
}

<style>
    .btn-delete {
        background-color: #c0392b;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-delete:hover {
        background-color: #a93226;
    }

    .btn-cancel {
        background-color: #888;
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-cancel:hover {
        background-color: #666;
    }
</style>

<h1 class="text-center">Confirmar Exclusão</h1>

<div class="card p-4 border-0 shadow" style="background-color: #2c2c2c; color: #d2a679;">
    <h4>Você tem certeza que deseja excluir o livro abaixo?</h4>

    <div class="mb-3">
        <strong>Título:</strong> @Model.Livro.Titulo
    </div>

    <div class="mb-3">
        <strong>Autor:</strong> @Model.Livro.Autor
    </div>

    <div class="mb-3">
        <strong>Editora:</strong> @Model.Livro.Editora
    </div>

    <div class="mb-3">
        <strong>Páginas:</strong> @Model.Livro.Paginas
    </div>

    <div class="mb-3">
        <strong>Quantidade:</strong> @Model.Livro.Quantidade
    </div>

    <div class="mb-3">
        <strong>Produzido:</strong> @(Model.Livro.Produzido ? "Sim" : "Não")
    </div>

    <div class="mb-3">
        <strong>Cotação Especial:</strong> @(Model.Livro.LivroCotacaoEspecial ? "Sim" : "Não")
    </div>

    <div class="mb-3">
        <strong>Preço de Compra:</strong> @Model.Livro.PrecoCompra.ToString("C")
    </div>

    <div class="mb-3">
        <strong>Preço de Aluguel:</strong> @Model.Livro.PrecoAluguel.ToString("C")
    </div>

    <div class="mb-3">
        <strong>Temas:</strong> @string.Join(", ", Model.Livro.Temas.Select(t => t.Nome))
    </div>

    <form method="post" onsubmit="return confirm('Tem certeza que deseja excluir este livro?');">
        <input type="hidden" asp-for="Livro.Id" />
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn-delete">Excluir</button>
            <a asp-page="/Livros/Index" class="btn-cancel">Cancelar</a>
        </div>
    </form>
</div>
