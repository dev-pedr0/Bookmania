@page
@model Bookmania.Pages.Livros.CriarModel
@{
	ViewData["Title"] = "Adicionar Livro";
}
<style>
    body {
        background-color: #1e1e1e;
        color: #f5f5f5;
        font-family: 'Segoe UI', sans-serif;
    }

    h1 {
        color: #d2a679;
        text-align: center;
    }

    .form-container {
        background-color: #2c2c2c;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 10px #000;
        max-width: 800px;
        margin: 0 auto;
    }

    .form-control, .form-select {
        background-color: #3a2f2f;
        color: #f5f5f5;
        border: 1px solid #555;
    }

    .form-label {
        color: #d2a679;
    }

    .btn-primary {
        background-color: #d2a679;
        border: none;
        color: #1e1e1e;
    }

    .btn-primary:hover {
        background-color: #b88c5a;
        color: white;
    }

    a {
        color: #d2a679;
    }

    a:hover {
        color: #f5f5f5;
    }
</style>

<h1>Adicionar Novo Livro</h1>

<div class="form-container mt-4">
    <form method="post">
        <div class="mb-3">
            <label asp-for="Livro.Titulo" class="form-label">Título</label>
            <input asp-for="Livro.Titulo" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.Autor" class="form-label">Autor</label>
            <input asp-for="Livro.Autor" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.Editora" class="form-label">Editora</label>
            <input asp-for="Livro.Editora" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.Paginas" class="form-label">Número de Páginas</label>
            <input asp-for="Livro.Paginas" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.Quantidade" class="form-label">Quantidade em Estoque</label>
            <input asp-for="Livro.Quantidade" type="number" class="form-control" />
        </div>

        <div class="mb-3 form-check form-switch">
            <input asp-for="Livro.Produzido" class="form-check-input" type="checkbox" />
            <label asp-for="Livro.Produzido" class="form-check-label">Produzido</label>
        </div>

        <div class="mb-3">
            <label asp-for="Livro.PrecoCompra" class="form-label">Preço de Compra</label>
            <input asp-for="Livro.PrecoCompra" type="number" step="0.01" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Temas</label>
            <select asp-for="SelectedTemas" asp-items="Model.TemasSelectList" multiple class="form-select"></select>
        </div>

        <!-- Preço de aluguel será mostrado mas não editável -->
        <div class="mb-3">
            <label asp-for="Livro.PrecoAluguel" class="form-label">Preço de Aluguel (auto)</label>
            <input asp-for="Livro.PrecoAluguel" type="number" step="0.01" class="form-control" readonly />
        </div>

        <!-- Cotação especial é calculada automaticamente -->
        <input type="hidden" asp-for="Livro.LivroCotacaoEspecial" />

        <div class="text-end">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>