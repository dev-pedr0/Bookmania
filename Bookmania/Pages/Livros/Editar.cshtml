@page
@model Bookmania.Pages.Livros.EditarModel
@{
	ViewData["Title"] = "Editar Livro";
}

<style>
    .btn-primary {
        background-color: #d2a679;
        border: none;
        color: #1e1e1e;
    }

    .btn-primary:hover {
        background-color: #b88c5a;
        color: white;
    }

    .btn-cancel {
        background-color: #888;
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
    }
</style>

<h1 class="text-center">Editar Livro</h1>

<div class="card p-4 border-0 shadow" style="color: #d2a679; background-color: #2c2c2c;">
    <form method="post">
        <input type="hidden" asp-for="Livro.Id" />

        <div class="mb-3">
            <label asp-for="Livro.Titulo" class="form-label">Título</label>
            <input asp-for="Livro.Titulo" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.Autor" class="form-label">Autor</label>
            <input asp-for="Livro.Autor" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.Editora" class="form-label">Editora</label>
            <input asp-for="Livro.Editora" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.Paginas" class="form-label">Páginas</label>
            <input asp-for="Livro.Paginas" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.Quantidade" class="form-label">Quantidade</label>
            <input asp-for="Livro.Quantidade" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Livro.Produzido" class="form-check-input" />
            <label asp-for="Livro.Produzido" class="form-check-label">Produzido</label>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Livro.LivroCotacaoEspecial" class="form-check-input" />
            <label asp-for="Livro.LivroCotacaoEspecial" class="form-check-label">Cotação Especial</label>
        </div>

        <div class="mb-3">
            <label asp-for="Livro.PrecoCompra" class="form-label">Preço de Compra</label>
            <input asp-for="Livro.PrecoCompra" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Livro.PrecoAluguel" class="form-label">Preço de Aluguel</label>
            <input asp-for="Livro.PrecoAluguel" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Temas</label>
            <select asp-for="SelectedTemas" asp-items="Model.TemasSelectList" multiple class="form-select">
            </select>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a asp-page="/Livros/Index" class="btn btn-cancel" style="background-color: red">Cancelar</a>
        </div>
    </form>
</div>
