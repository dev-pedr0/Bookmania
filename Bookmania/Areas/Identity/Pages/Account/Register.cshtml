@page
@model Bookmania.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<link rel="stylesheet" href="~/css/amadeirado.css" />

<div class="register-container">
    <h1 class="title">Crie sua conta</h1>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Input.Nome"></label>
            <input asp-for="Input.Nome" class="form-control" />
            <span asp-validation-for="Input.Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Idade"></label>
            <input asp-for="Input.Idade" class="form-control" />
            <span asp-validation-for="Input.Idade" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.CPF"></label>
            <input asp-for="Input.CPF" class="form-control" />
            <span asp-validation-for="Input.CPF" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Endereco"></label>
            <input asp-for="Input.Endereco" class="form-control" />
            <span asp-validation-for="Input.Endereco" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Telefone"></label>
            <input asp-for="Input.Telefone" class="form-control" />
            <span asp-validation-for="Input.Telefone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-register">Registrar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
